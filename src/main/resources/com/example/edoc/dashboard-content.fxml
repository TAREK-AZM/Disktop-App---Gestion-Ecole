<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.edoc.Controllers.DashboardContentController"
      spacing="20" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #ffffff;">

    <!-- Profile Header -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox alignment="CENTER_LEFT" spacing="5">
            <Label fx:id="usernameLabel" text="Username"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" />
            <Label fx:id="roleLabel" text="Role"
                   style="-fx-font-size: 18px; -fx-text-fill: #666;" />
        </VBox>
    </HBox>

    <!-- Statistics Section -->
</VBox>