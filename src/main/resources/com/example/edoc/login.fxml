<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.edoc.LoginController" style="-fx-background-color: #f0f2f5;">
    <center>
        <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
            </padding>

            <Rectangle width="100" height="100" arcWidth="20" arcHeight="20" fill="#20c997">
                <effect>
                    <DropShadow radius="10" color="rgba(0,0,0,0.1)"/>
                </effect>
            </Rectangle>

            <Label text="Welcome Back" style="-fx-font-size: 28px; -fx-text-fill: #333; -fx-font-weight: bold;" />
            <Label text="Enter your email and password to sign in"
                   style="-fx-font-size: 14px; -fx-text-fill: #666;" />

            <TextField fx:id="emailField" promptText="Your email address"
                       style="-fx-pref-height: 40px; -fx-font-size: 14px; -fx-background-radius: 5; -fx-border-radius: 5;" />
            <PasswordField fx:id="passwordField" promptText="Your password"
                           style="-fx-pref-height: 40px; -fx-font-size: 14px; -fx-background-radius: 5; -fx-border-radius: 5;" />

            <CheckBox fx:id="rememberMeCheckBox" text="Remember me" style="-fx-text-fill: #666;" />

            <Button text="SIGN IN" fx:id="signInButton"
                    onAction="#handleLogin"
                    style="-fx-background-color: #20c997; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 200px; -fx-pref-height: 40px; -fx-background-radius: 5; -fx-border-radius: 5;">
                <effect>
                    <DropShadow radius="5" color="rgba(0,0,0,0.2)"/>
                </effect>
            </Button>

            <HBox alignment="CENTER" spacing="5">
                <Label text="Don't have an account?" style="-fx-text-fill: #666;" />
                <Hyperlink text="Sign Up" fx:id="signUpLink" style="-fx-text-fill: #20c997; -fx-font-weight: bold;" />
            </HBox>
            <Label fx:id="errorMessage" text="" visible="false" />
        </VBox>
    </center>
</BorderPane>
